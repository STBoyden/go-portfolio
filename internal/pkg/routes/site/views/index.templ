package views

import "github.com/STBoyden/go-portfolio/internal/pkg/routes/site/views/components"

templ Index() {
	<div class="hero my-auto">
		<div class="hero-content flex-col lg:flex-row-reverse">
			<img
				src="https://avatars.githubusercontent.com/u/25185976?v=4"
				class="max-w-[256px] rounded-2xl border-1 [visibility:collapse] md:visible"
			/>
			<div class="mx-8 float-left">
				@components.Header(components.Title, "Samuel Boyden")
				<p class="text-lg md:text-xl text-base-content">
					Samuel is a developer primarily focused on full-stack or back-end web
					development - prioritising languages like Go, Kotlin and Rust.
				</p>
			</div>
		</div>
	</div>
	<div class="my-2 w-full h-full flex flex-col place-items-center">
		<div class="mx-8 md:mx-12 lg:mx-16 my-2 max-w-[75%]">
			@components.Header(components.H1, "For recruiters...")
			<p class="md:text-lg mb-4">
				{ "If you are here as a recruiter and wish to get in contact with me, please email me at " }
				@components.Hyperlink("sam@stboyden.com", "mailto:sam@stboyden.com")
				{ " with a suitable subject title. From there I can supply you with a CV (Resum√©) as appropriate." }
			</p>
		</div>
	</div>
}
